{
  "name": "server",
  "description": "Projet de base pour le cours de LOG2990",
  "version": "1.1.0",
  "private": true,
  "scripts": {
    "start": "tsc && concurrently --kill-others \"tsc -w\" \"nodemon out/server/app/www.js\" ",
    "lint": "tslint --project tsconfig.json \"./app/**/*.ts\" --format stylish",
    "test": "mocha --exit",
    "coverage": "nyc mocha --exit",
    "tsc": "tsc",
    "tsc:w": "tsc -w",
    "clean": "rimraf out node_modules",
    "postinstall": "rimraf false"
  },
  "nyc": {
    "check-coverage": true,
    "per-file": true,
    "include": [
      "app/**/*.ts"
    ],
    "extension": [
      ".ts"
    ],
    "exclude": [
      "app/app.ts",
      "app/www.ts",
      "app/server.ts",
      "app/inversify.config.ts",
      "app/types.ts",
      "**/*.spec.ts"
    ],
    "require": [
      "ts-node/register"
    ],
    "reporter": [
      "html",
      "text"
    ],
    "all": true,
    "cache": true,
    "sourceMap": true,
    "instrument": true
  },
  "dependencies": {
    "@types/firebase": "^3.2.1",
    "@types/multer": "^1.3.10",
    "body-parser": "^1.18.3",
    "chai-http": "^4.3.0",
    "cors": "2.8.5",
    "debug": "^4.1.1",
    "express": "~4.17.1",
    "morgan": "^1.9.1",
    "reflect-metadata": "^0.1.10",
    "serve-favicon": "~2.5.0"
  },
  "devDependencies": {
    "@google-cloud/storage": "^5.17.0",
    "@types/body-parser": "^1.17.1",
    "@types/chai": "^4.3.0",
    "@types/cookie-parser": "1.4.2",
    "@types/cors": "^2.8.12",
    "@types/express": "^4.17.13",
    "@types/express-serve-static-core": "^4.16.9",
    "@types/formidable": "^2.0.3",
    "@types/mocha": "^9.0.0",
    "@types/mock-fs": "^4.10.0",
    "@types/mongodb": "^4.0.7",
    "@types/mongodb-memory-server": "^2.3.0",
    "@types/mongoose": "^5.5.19",
    "@types/morgan": "^1.9.3",
    "@types/node": "^17.0.8",
    "@types/node-uuid": "^0.0.29",
    "@types/sinon": "^10.0.6",
    "@types/supertest": "^2.0.8",
    "chai": "^4.3.4",
    "concurrently": "^7.0.0",
    "cookie-parser": "^1.4.6",
    "firebase": "^9.6.3",
    "firebase-functions-test": "^0.3.3",
    "formidable": "^2.0.1",
    "inversify": "^6.0.1",
    "mocha": "^9.1.4",
    "mock-fs": "^5.1.2",
    "mongo-mock": "^4.1.0",
    "mongodb": "^4.3.0",
    "mongodb-memory-server": "^8.2.0",
    "mongoose": "^6.1.6",
    "multer": "^2.0.0-rc.1",
    "nodemon": "^2.0.15",
    "nyc": "^15.1.0",
    "rimraf": "^3.0.2",
    "sinon": "^12.0.1",
    "supertest": "^6.2.1",
    "ts-node": "^10.4.0",
    "ts-sinon": "^2.0.2",
    "tslint": "^6.1.3",
    "tslint-eslint-rules": "5.4.0",
    "tslint-microsoft-contrib": "6.2.0",
    "typescript": "^4.5.4"
  }
}
